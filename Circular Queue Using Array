#include <iostream>
using namespace std;

#define MAX 5

class CircularQueue {
    char queue[MAX];
    int front, rear;

public:
    CircularQueue() {
        front = -1;
        rear = -1;
    }

    void insert(char item) {
        if ((front == 0 && rear == MAX - 1) || (rear + 1) % MAX == front) {
            cout << "Queue Overflow! Cannot insert '" << item << "'.\n";
            return;
        }

        if (front == -1)
            front = rear = 0;
        else
            rear = (rear + 1) % MAX;

        queue[rear] = item;
        cout << "Inserted '" << item << "' into the Circular Queue.\n";
    }

    void remove() {
        if (front == -1) {
            cout << "Queue Underflow! Cannot delete.\n";
            return;
        }

        cout << "Deleted '" << queue[front] << "' from the Circular Queue.\n";

        if (front == rear)
            front = rear = -1; // queue becomes empty
        else
            front = (front + 1) % MAX;
    }

    void display() {
        if (front == -1) {
            cout << "Queue is empty.\n";
            return;
        }

        cout << "Circular Queue elements: ";
        int i = front;
        while (true) {
            cout << queue[i] << " ";
            if (i == rear)
                break;
            i = (i + 1) % MAX;
        }
        cout << endl;
    }
};

int main() {
    CircularQueue cq;
    int choice;
    char ch;

    do {
        cout << "\nCircular Queue Operations Menu\n";
        cout << "1. Insert an element\n";
        cout << "2. Delete an element\n";
        cout << "3. Display Queue\n";
        cout << "4. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "Enter character to insert: ";
                cin >> ch;
                cq.insert(ch);
                break;
            case 2:
                cq.remove();
                break;
            case 3:
                cq.display();
                break;
            case 4:
                cout << "Exiting program.\n";
                break;
            default:
                cout << "Invalid choice! Try again.\n";
        }
    } while (choice != 4);

    return 0;
}
